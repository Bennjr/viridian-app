{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "viridian",
  "version": "0.1.0",
  "identifier": "com.viridian.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "mainWin",
        "title": "Viridian",
        "url": "index.html",
        "width": 800,
        "height": 600,
        "resizable": true,
        "focus": true,
        "closable": true,
        "shadow": false
      },
      {
        "label": "overlayWin",
        "title": "Viridian",
        "url": "overlay.html",
        "width": 300,
        "height": 75,
        "decorations": false,
        "closable": false,
        "shadow": false,
        "resizable": true,
        "transparent": true,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },

  "plugins": {
    "webview": {
      "additionalBrowserArgs": "--use-angle=swiftshader --disable-gpu --disable-gpu-compositing --enable-features=OverlayScrollbar"
    },
    "splashscreen": {
      "image_path": "icons/32x32.png",
      "center": true,
      "transparent": false
    }
  }
}